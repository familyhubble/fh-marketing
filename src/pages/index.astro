---
import Layout from '../layouts/Layout.astro';
import WhyUseFamilyHubbleV3 from '../components/WhyUseFamilyHubbleV3.astro';
import Changelog from '../components/Changelog.astro';
import Testimonials from '../components/Testimonials.astro';
---

<Layout>
  <main class="mx-auto max-w-7xl px-6">
    <!-- Hero -->
    <section class="pt-16 pb-12 md:pt-24 md:pb-16">
      <div class="mx-auto max-w-3xl text-center">
        <h1
          class="font-serif text-4xl tracking-tight text-[#023047] md:text-6xl"
        >
          Your family convos deserve <span class="text-[#fb8500]">better</span> than
          group texts
        </h1>
        <p class="mx-auto mt-5 max-w-lg text-stone-700">
          Family Hubble transforms chaotic family texts into organized
          conversations, shared tasks, and clear decisions; all in one dedicated
          space
        </p>
        <div class="mt-7 flex items-center justify-center gap-3">
          <a
            id="cta"
            href="/private-beta"
            class="rounded-md bg-[#023047] px-4 py-2 font-semibold text-white hover:bg-[#023047]/80"
            >Join Private Beta</a
          >
        </div>
      </div>
      <!-- Hero image placeholder using stock photo -->
      <div class="mt-12 md:mt-16">
        <img
          src="https://framerusercontent.com/images/rWMUml37wCMut1qDm4ATOik1HU.jpg"
          alt="Collaboration dashboard placeholder"
          class="w-full rounded-xl border border-stone-200 shadow-sm"
          loading="lazy"
        />
      </div>
    </section>

    <WhyUseFamilyHubbleV3 />

    <!-- Social proof / Testimonials (static, no slider) -->
    <!-- <Testimonials /> -->

    <!-- Changelog teaser -->
    <!-- <Changelog /> -->

    <!-- CTA Footer -->
    <section class="border-t border-stone-200/70 py-20 text-center">
      <h2
        class="mx-auto max-w-lg font-serif text-3xl tracking-tight text-[#023047] md:text-5xl"
      >
        Finally, a home for your family's digital life
      </h2>
      <p class="mt-4 text-stone-700">Weâ€™re sending out invites soon.</p>
      <a
        href="/private-beta"
        class="mt-6 inline-block rounded-md bg-[#023047] px-4 py-2 font-medium text-white hover:bg-[#023047]/80"
        >Join Private Beta</a
      >
    </section>
  </main>
</Layout>
