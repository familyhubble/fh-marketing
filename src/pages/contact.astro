---
import Layout from "../layouts/Layout.astro";
import { Check } from "@lucide/astro";
---

<Layout>
  <main class="mx-auto max-w-7xl px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      <!-- Left column: content -->
      <section>
        <h1 class="text-4xl md:text-5xl font-serif tracking-tight">Contact sales</h1>
        <p class="mt-4 text-stone-700 max-w-xl">
          Tell us a little about your family or team and how you’d like to use Family Hubble.
          We’ll reach out shortly to help you get started.
        </p>

        <ul class="mt-8 space-y-4">
          <li class="flex items-start gap-3">
            <span class="mt-1 rounded-full bg-[#023047]/10 p-1 text-[#023047]">
              <Check size={16} />
            </span>
            <span class="text-stone-800">Request a demo of Family Hubble</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 rounded-full bg-[#023047]/10 p-1 text-[#023047]">
              <Check size={16} />
            </span>
            <span class="text-stone-800">Find the best plan for your family</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 rounded-full bg-[#023047]/10 p-1 text-[#023047]">
              <Check size={16} />
            </span>
            <span class="text-stone-800">Get help with onboarding</span>
          </li>
        </ul>

        <div class="mt-8 text-sm text-stone-600">
          Technical issues or product questions?
          <a href="mailto:support@familyhubble.com" class="text-[#023047] hover:underline">Contact support →</a>
        </div>
      </section>

      <!-- Right column: form (no card) -->
      <section>
        <form action="#" method="POST" class="space-y-5">
          <div>
            <label for="fullName" class="block text-sm font-medium text-stone-800">Full name</label>
            <input id="fullName" name="fullName" type="text" required
              class="mt-1 block w-full rounded-md border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm placeholder-stone-400 focus:border-[#023047] focus:outline-none focus:ring-2 focus:ring-[#023047]" placeholder="John Doe" />
          </div>

          <div>
            <label for="workEmail" class="block text-sm font-medium text-stone-800">Email</label>
            <input id="workEmail" name="workEmail" type="email" required
              class="mt-1 block w-full rounded-md border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm placeholder-stone-400 focus:border-[#023047] focus:outline-none focus:ring-2 focus:ring-[#023047]" placeholder="john@acme.com" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-stone-800">How can we help?</label>
            <textarea id="message" name="message" rows="5" required
              class="mt-1 block w-full rounded-md border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm placeholder-stone-400 focus:border-[#023047] focus:outline-none focus:ring-2 focus:ring-[#023047]" placeholder="I’m considering Family Hubble for my family/team. I’d like to explore…"></textarea>
          </div>

          <!-- simple honeypot -->
          <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />

          <button type="submit" class="w-full rounded-md bg-[#023047] px-4 py-3 font-semibold text-white shadow-sm hover:bg-[#023047]/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#023047]">
            Send message
          </button>
        </form>
      </section>
    </div>
  </main>
</Layout>


